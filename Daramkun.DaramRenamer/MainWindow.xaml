<Window x:Class="Daramkun.DaramRenamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:custom="clr-namespace:Daramkun.DaramRenamer"
		xmlns:setting="clr-namespace:Daramkun.DaramRenamer.Properties"
        Title="다람 리네이머 - v" Width="680" Height="540"
		xml:lang="ko-KR" Language="ko-KR"
		Icon="Resources/ProgramIcon.ico" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<custom:ComboBoxBindingConverter x:Key="comboBoxBindingConverter" />
	</Window.Resources>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28" />
			<RowDefinition />
			<RowDefinition Height="200" />
		</Grid.RowDefinitions>

		<ToolBarTray>
			<ToolBar Grid.Row="0" ToolBarTray.IsLocked="True" Focusable="True">
				<Button Click="ToolBarButton_Open_Click">
					<Image Source="Resources/folder.png" />
					<Button.ToolTip>
						<ToolTip Content="이름을 일괄 변환할 파일을 불러옵니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_DeleteAll_Click">
					<Image Source="Resources/delete.png" />
					<Button.ToolTip>
						<ToolTip Content="목록을 삭제합니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_Apply_Click">
					<Image Source="Resources/accept.png" />
					<Button.ToolTip>
						<ToolTip Content="이름을 일괄 변경합니다." />
					</Button.ToolTip>
				</Button>
				<Separator />
				<Button Click="ToolBarButton_Undo_Click">
					<Image Source="Resources/arrow_undo.png" />
					<Button.ToolTip>
						<ToolTip Content="이전 실행을 취소합니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_Redo_Click">
					<Image Source="Resources/arrow_redo.png" />
					<Button.ToolTip>
						<ToolTip Content="실행 취소를 되돌립니다." />
					</Button.ToolTip>
				</Button>
				<Separator />
				<Button Click="ToolBarButton_Restore_Click">
					<Image Source="Resources/arrow_rotate_anticlockwise.png" />
					<Button.ToolTip>
						<ToolTip Content="변경을 취소합니다." />
					</Button.ToolTip>
				</Button>
				<Separator />
				<Button Click="ToolBarButton_UpTo_Click">
					<Image Source="Resources/arrow_up.png" />
					<Button.ToolTip>
						<ToolTip Content="선택한 항목을 보다 위로 올립니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_DownTo_Click">
					<Image Source="Resources/arrow_down.png" />
					<Button.ToolTip>
						<ToolTip Content="선택한 항목을 보다 아래로 내립니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_Sort_Click">
					<Image Source="Resources/rainbow.png" />
					<Button.ToolTip>
						<ToolTip Content="항목을 이름순으로 오름차순 정렬합니다." />
					</Button.ToolTip>
				</Button>
				<Separator />
				<Button Click="ToolBarButton_CheckUpdate_Click">
					<Image Source="Resources/application_get.png" />
					<Button.ToolTip>
						<ToolTip Content="업데이트를 확인합니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_IssueTracker_Click">
					<Image Source="Resources/email_go.png" />
					<Button.ToolTip>
						<ToolTip Content="버그 또는 건의 요청에 대해 피드백합니다." />
					</Button.ToolTip>
				</Button>
				<Button Click="ToolBarButton_Donation_Click">
					<Image Source="Resources/cup_add.png" />
					<Button.ToolTip>
						<ToolTip Content="PayPal을 통해 기부합니다." />
					</Button.ToolTip>
				</Button>
			</ToolBar>
		</ToolBarTray>

		<ListView Name="listViewFiles" Grid.Row="1" Margin="5,5,5,5" AllowDrop="True"
				  Focusable="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
				  ScrollViewer.HorizontalScrollBarVisibility="Auto"
				  DragEnter="ListView_DragEnter" Drop="ListView_Drop" KeyUp="ListView_KeyUp">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="HorizontalContentAlignment" Value="Stretch" />
				</Style>
			</ListView.ItemContainerStyle>
			
			<ListView.View>
				<GridView>
					<GridView.ColumnHeaderTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding}" Margin="0,4,0,4" />
						</DataTemplate>
					</GridView.ColumnHeaderTemplate>

					<GridViewColumn Width="210">
						<GridViewColumnHeader Content="원본 이름" />
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Grid HorizontalAlignment="Stretch">
									<TextBlock Foreground="DarkSlateBlue" Text="{Binding OriginalName}" />
								</Grid>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="210">
						<GridViewColumnHeader Content="변경할 이름" />
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Grid HorizontalAlignment="Stretch">
									<TextBox Foreground="DarkSlateBlue" IsReadOnly="True" IsReadOnlyCaretVisible="False" Text="{Binding ChangedName}" BorderThickness="0" Background="Transparent" MouseDoubleClick="TextBox_MouseDoubleClick" LostFocus="TextBox_LostFocus" PreviewKeyDown="TextBox_PreviewKeyDown" />
								</Grid>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="110">
						<GridViewColumnHeader Content="위치한 경로" />
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Grid HorizontalAlignment="Stretch">
									<TextBlock Cursor="Arrow" Foreground="DarkSlateBlue" Text="{Binding OriginalPath}" />
								</Grid>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
					<GridViewColumn Width="110">
						<GridViewColumnHeader Content="위치할 경로" />
						<GridViewColumn.CellTemplate>
							<DataTemplate>
								<Grid HorizontalAlignment="Stretch">
									<TextBox Foreground="DarkSlateBlue" IsReadOnly="True" IsReadOnlyCaretVisible="False" Text="{Binding ChangedPath}" BorderThickness="0" Background="Transparent" MouseDoubleClick="TextBox_MouseDoubleClick" LostFocus="TextBox_LostFocus" PreviewKeyDown="TextBox_PreviewKeyDown" />
								</Grid>
							</DataTemplate>
						</GridViewColumn.CellTemplate>
					</GridViewColumn>
				</GridView>
			</ListView.View>
		</ListView>
		<TabControl Focusable="True" Grid.Row="2" Margin="5,0,5,5">
			<!-- ========================================= -->
			<!--                 문자열처리                 -->
			<!-- ========================================= -->
			<TabItem Header="문자열 처리">
				<TabControl Focusable="True" Margin="5,5,5,5">
					<TabItem Header="문자열 바꾸기">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="원본 문자열: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="바꿀 문자열: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="stringReplaceOriginalText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
							<TextBox Name="stringReplaceNewText" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />
							<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<CheckBox Name="stringReplaceIncludeExt" Content="확장자 포함" IsChecked="True" />
							</StackPanel>
							
							<Button Content="실행" Grid.Row="4" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_Replace_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="문자열 붙이기">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="붙일 문자열: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="붙일 위치: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="stringConcatText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
							<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="stringConcatPreRadio" Content="맨 앞에 붙이기" IsChecked="True" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="stringConcatPostRadio" Content="맨 뒤에 붙이기" />
							</StackPanel>
							
							<Button Content="실행" Grid.Row="3" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_Concat_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="양 옆 빈 칸 제거">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="제거할 위치: " VerticalAlignment="Center" TextAlignment="Right" />

							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="stringTrimAllRadio" Content="모두 제거" IsChecked="True" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="stringTrimPreRadio" Content="맨 앞만 제거" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="stringTrimPostRadio" Content="맨 뒤만 제거" />
							</StackPanel>

							<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<CheckBox Name="stringTrimIncludeExt" Content="확장자 빈 칸 제거 포함" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="3" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_Trim_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="묶인 문자열 제거">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="앞 문자열: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="뒤 문자열: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="stringEnclosedPreText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
							<TextBox Name="stringEnclosedPostText" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />
							<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<CheckBox Name="stringEnclosedAll" Content="모든 묶인 문자열에 대해 실행" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="4" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_DelEnclosed_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="이름 지우기">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<Button Content="실행" Grid.Row="1" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_DelName_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="이름 대소문자">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>
							
							<TextBlock Grid.Row="0" Grid.Column="0" Text="처리 방법: " VerticalAlignment="Center" TextAlignment="Right" />

							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="stringUpLowUpper" Content="대문자로" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="stringUpLowLower" Content="소문자로" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="stringUpLowOneLetterUpper" Content="단어 맨 앞만 대문자로" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="2" Grid.ColumnSpan="2" IsDefault="True" Click="StringProcess_LowUp_Click" />
						</Grid>
					</TabItem>
				</TabControl>
			</TabItem>
			<!-- ========================================= -->
			<!--                 확장자처리                 -->
			<!-- ========================================= -->
			<TabItem Header="확장자 처리">
				<TabControl Focusable="True" Margin="5,5,5,5">
					<TabItem Header="확장자 추가">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="추가할 확장자: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBox Name="extAddExtensionText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />

							<Button Content="실행" Grid.Row="2" Grid.ColumnSpan="2" IsDefault="True" Click="ExtensionProcess_AddExt_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="확장자 제거">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<Button Content="실행" Grid.Row="1" Grid.ColumnSpan="2" IsDefault="True" Click="ExtensionProcess_RemoveExt_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="확장자 변경">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="변경할 확장자: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBox Name="extChangeExtensionText" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />

							<Button Content="실행" Grid.Row="2" Grid.ColumnSpan="2" IsDefault="True" Click="ExtensionProcess_ChangeExt_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="확장자 대소문자">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="처리 방법: " VerticalAlignment="Center" TextAlignment="Right" />

							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="extUpLowUpper" Content="대문자로" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="extUpLowLower" Content="소문자로" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="2" Grid.ColumnSpan="2" IsDefault="True" Click="ExtensionProcess_LowUp_Click" />
						</Grid>
					</TabItem>
				</TabControl>
			</TabItem>
			<!-- ========================================= -->
			<!--                  숫자처리                  -->
			<!-- ========================================= -->
			<TabItem Header="숫자 처리">
				<TabControl Focusable="True" Margin="5,5,5,5">
					<TabItem Header="숫자만 남기고 제거">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="처리 방법: " VerticalAlignment="Center" TextAlignment="Right" />

							<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="numDelWoNoNumberWordOnly" Content="숫자로만 된 단어만 남김" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="numDelWoNoAllNumber" Content="모든 숫자 남김" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="2" Grid.ColumnSpan="2" IsDefault="True" Click="Number_DeleteWithoutNumber_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="숫자 자리수 맞추기">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="자리수: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="위치: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="numSameDigitCount" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" MaxLines="1" PreviewTextInput="Digit_PreviewTextInput" >
								<TextBox.InputScope>
									<InputScope>
										<InputScope.Names>
											<InputScopeName NameValue="Number"/>
										</InputScope.Names>
									</InputScope>
								</TextBox.InputScope>
							</TextBox>
							<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="numSameDigitPre" Content="맨 앞 자리 수 변경" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="numSameDigitPost" Content="맨 뒷 자리 수 변경" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="3" Grid.ColumnSpan="2" IsDefault="True" Click="Number_SameDigits_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="번호 붙이기">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="간격: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="위치: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="numAddNumTerm" Grid.Row="0" Grid.Column="1" Text="1" VerticalAlignment="Center" PreviewTextInput="Digit_PreviewTextInput" >
								<TextBox.InputScope>
									<InputScope>
										<InputScope.Names>
											<InputScopeName NameValue="Number"/>
										</InputScope.Names>
									</InputScope>
								</TextBox.InputScope>
							</TextBox>
							<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="numAddNumPre" Content="맨 앞에 추가" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="numAddNumPost" Content="맨 뒤에 추가" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="3" Grid.ColumnSpan="2" IsDefault="True" Click="Number_AddNum_Click" />
						</Grid>
					</TabItem>
					<TabItem Header="숫자 증감">
						<Grid Margin="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="24" />
								<RowDefinition Height="24" />
								<RowDefinition />
								<RowDefinition Height="28" />
							</Grid.RowDefinitions>

							<TextBlock Grid.Row="0" Grid.Column="0" Text="증감할 값: " VerticalAlignment="Center" TextAlignment="Right" />
							<TextBlock Grid.Row="1" Grid.Column="0" Text="위치: " VerticalAlignment="Center" TextAlignment="Right" />

							<TextBox Name="numAddSubNumTerm" Grid.Row="0" Grid.Column="1" Text="1" VerticalAlignment="Center" PreviewTextInput="Digit_PreviewTextInput" >
								<TextBox.InputScope>
									<InputScope>
										<InputScope.Names>
											<InputScopeName NameValue="Number"/>
										</InputScope.Names>
									</InputScope>
								</TextBox.InputScope>
							</TextBox>
							<StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
								<RadioButton Name="numAddSubNumPre" Content="맨 앞에 추가" />
								<Grid Margin="5,0,0,0" />
								<RadioButton Name="numAddSubNumPost" Content="맨 뒤에 추가" IsChecked="True" />
							</StackPanel>

							<Button Content="실행" Grid.Row="3" Grid.ColumnSpan="2" IsDefault="True" Click="Number_Increase_Click" />
						</Grid>
					</TabItem>
				</TabControl>
			</TabItem>
			<!-- ========================================= -->
			<!--                    날짜                    -->
			<!-- ========================================= -->
